/* pages/edit/edit.wxss */
.edit-head {
  display: flex;
  box-sizing: border-box; 
  width: 100%; 
  align-items: center;
  padding: 5px 20px;
  background: #252a34;
  color: #3CC51F;
  position: fixed; 
  top: 0px; 
  left: 0px; 
  z-index: 99; 
}

.file-name-box {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.icon {
  width: 30px;
  height: 30px;
}

.textarea-box {
  margin: 60px 10px;
  padding: 1em; 
  background: #fff;
  border-radius: 5px;
}

textarea {
  width: 100%; 
  display: block;
  position: relative;
  background: #fff;
}  

.md-save-box {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0px;
  bottom: 0px;
  z-index: 99;
}

.md-save {
  width: 80%;
  background: #fff;
  display: flex;
  flex-wrap: wrap; 
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.save-title {
  display: block;
  margin: 10px 6px;
  font-size: 18px;
}

input {
  width: 100%;
  margin: 5px 10px;
  padding: 0.5em;
  border: 2px solid #eee;
  border-radius: 5px;
}

button {
  width: 100%; 
  margin: 5px 10px; 
  color: #fff;
}

.confirm-btn {
  background: #1AAD19;
}

.cancel-btn {
  background: #E64340;
}

.hover-confirm {
  background: #9ED99D;
  color: rgba(255, 255, 255, 0.6); 
}

.hover-cancel {
  background: #EC8B89;
  color: rgba(255, 255, 255, 0.6);
}
