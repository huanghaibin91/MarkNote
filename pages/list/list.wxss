/* pages/list/list.wxss */
.list-head {
  display: flex;
  box-sizing: border-box; 
  width: 100%; 
  align-items: center;
  padding: 5px 20px;
  background: #252a34;
  color: #08d9d6;
  position: fixed; 
  top: 0px; 
  left: 0px; 
  z-index: 99; 
}

.list-icon-box {
  flex: 1;
}

.icon {
  width: 30px;
  height: 30px;
}

.file-list-item {
  margin: 10px 10px;
  padding: 10px;
  background: #fff;
  border-radius: 6px;
  border: 1px solid #eeeeee;
  display: flex;
  align-items: center;
}

.list-item-box {
  margin-top: 60px;
}

.list-item-name {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list-item-action {
  width: 30px;
  height: 30px;
  padding-left: 1em;
}

/* 首屏封面 */
.load-box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
   background: url(http://sjbz.fd.zol-img.com.cn/t_s750x1334c/g5/M00/00/01/ChMkJlfJUO6IO6QqAA-y7rd7PK0AAU9bAMEY7wAD7MG032.jpg) no-repeat; 
   background-size: cover; 
  position: fixed;
  top: 0;
  bottom: 0;
}

.load-title {
  height: 50px;
  display: flex;
  align-items: center;
}

.load-img {
  width: 50px;
  height: 50px;
  padding-right: 10px;
  border-right: 2px solid black;
}

.load-text {
  padding-left: 10px;
  font-size: 20px;
}

.md-rename-box {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0px;
  bottom: 0px;
  z-index: 99;
}

.md-rename {
  width: 80%;
  background: #fff;
  display: flex;
  flex-wrap: wrap; 
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.rename-title {
  display: block;
  margin: 10px 6px;
  font-size: 18px;
}

input {
  width: 100%;
  margin: 5px 10px;
  padding: 0.5em;
  border: 2px solid #eee;
  border-radius: 5px;
}

button {
  width: 100%; 
  margin: 5px 10px; 
  color: #fff;
}

.confirm-btn {
  background: #1AAD19;
}

.cancel-btn {
  background: #E64340;
}

.hover-confirm {
  background: #9ED99D;
  color: rgba(255, 255, 255, 0.6); 
}

.hover-cancel {
  background: #EC8B89;
  color: rgba(255, 255, 255, 0.6);
}